{
  "name": "ADP Next",
  "content_scripts": [
    {
      "matches": [
        "https://workforcenow.adp.com/*"
      ],
      "css": [
        "toolbar.css"
      ],
      "js": [
        "toolbar.js"
      ]
    }
  ],
  "description": "Add some useful features to ADP",
  "version": "0.2.0",
  "permissions": [
    "storage"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_title": "ADP Next",
    "default_icon": "icon.png"
  },
  "manifest_version": 2
}