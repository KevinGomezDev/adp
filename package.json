  },
  "devDependencies": {
    "@types/chrome": "0.0.48",
    "@types/jasmine": "2.5.54",
    "awesome-typescript-loader": "3.2.3",
    "copy-webpack-plugin": "4.0.1",
    "core-js": "2.5.1",
    "css-loader": "0.28.7",
