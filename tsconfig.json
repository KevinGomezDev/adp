{
    "compilerOptions": {
        "module": "es6",
        "target": "es6",
        "sourceMap": true,
        "strict": true,
        "strictNullChecks": false,
        "noUnusedLocals": true,
        "noImplicitThis": true,
        "suppressImplicitAnyIndexErrors": true,
        "lib": [
          "es2017",
          "dom"
        ],
        "typeRoots": [
          "node_modules/@types"
        ]
    },
    "exclude": [
        "node_modules",
        ".git",
        ".vscode",
        "dist",
        "config"
    ]
}